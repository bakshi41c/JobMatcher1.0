<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.appathon.MainActivity" >

    <TextView
        android:id="@+id/TVJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="JOB"
        android:textColor="@color/white"
        android:textSize="120sp" />

    <TextView
        android:id="@+id/TVMatcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVJob"
        android:layout_centerHorizontal="true"
        android:text="MATCHER"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <Button
        android:id="@+id/postJobBTN"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TVMatcher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="POST JOB" />

    <Button
        android:id="@+id/findJobBTN"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/postJobBTN"
        android:layout_below="@+id/postJobBTN"
        android:layout_marginTop="28dp"
        android:text="FIND JOB" />

</RelativeLayout>