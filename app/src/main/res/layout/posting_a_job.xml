<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blue"
    tools:context="com.example.appathon.MainActivity" >

    <TextView
        android:id="@+id/postJobTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"
        android:text="POST JOB"
        android:layout_centerHorizontal="true"
        android:textSize="50sp" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postJobTitleTV"
        android:layout_alignLeft="@+id/jobTitleET"
        android:layout_alignRight="@id/jobTitleET"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/jobTitleET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerCategory"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:hint="Job Title"
        android:ems="12"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/contactNumberET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jobTitleET"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:hint="Contact Number"
        android:ems="12"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/locationET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactNumberET"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:hint="Location"
        android:ems="12"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/jobDescriptionET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locationET"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="60dp"
        android:paddingLeft="5dp"
        android:hint="Description"

        android:ems="12"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/postJobBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jobDescriptionET"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:ems="12"
        android:layout_centerHorizontal="true" />
    
</RelativeLayout>
