<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="120dp"
    android:layout_width="match_parent"
    android:id="@+id/card_view_2"
    android:gravity="center_horizontal"
    android:layout_marginLeft = "15dp"
    android:layout_marginRight = "15dp"
    android:layout_marginTop = "15dp"
    android:padding = "10dp"
    android:elevation="5dp"
    card_view:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id = "@+id/content_rv"
        >

        <ImageView
            android:layout_marginTop="1dp"
            android:layout_width = "90dp"
            android:layout_height = "match_parent"
            android:id = "@+id/job_image_iv"
            android:layout_alignParentLeft="true"
            android:padding = "5dp"
            android:scaleType="centerInside"
            android:src = "@drawable/job_placeholder_image"
            />

        <TextView
            android:id="@+id/job_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft= "10dp"
            android:textSize="22dp"
            android:layout_marginTop= "10dp"
            android:layout_toRightOf="@id/job_image_iv"
            android:text = "Job Title"/>

        <TextView
            android:id="@+id/job_description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft= "10dp"
            android:textSize="15dp"
            android:layout_toRightOf="@id/job_image_iv"
            android:layout_below="@id/job_title_tv"
            android:text = "Job Description"/>

        <TextView
            android:id="@+id/distance_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft= "10dp"
            android:textSize="15dp"
            android:layout_toRightOf="@id/job_image_iv"
            android:layout_alignParentBottom="true"
            android:paddingBottom="15dp"
            android:text = "Distance: "/>

        <TextView
            android:id="@+id/distance_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft= "10dp"
            android:textSize="15dp"
            android:layout_toRightOf="@id/distance_label_tv"
            android:layout_alignParentBottom="true"
            android:paddingBottom="15dp"
            android:text = ""/>


    </RelativeLayout>


</android.support.v7.widget.CardView>
